package com.cookiehook.armourexpansion1710.item;

import com.cookiehook.armourexpansion.init.ModItems;

import net.minecraft.entity.Entity;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemArmor;
import net.minecraft.item.ItemStack;
import net.minecraft.potion.Potion;
import net.minecraft.potion.PotionEffect;
import net.minecraft.world.World;

public class ItemGlowstoneArmor extends ItemArmor
{
	public ItemGlowstoneArmor(ArmorMaterial material, int renderIndex, int armorType) 
	{
		super(material, renderIndex, armorType);
	}
	
	@Override
	public void onArmorTick(World world, EntityPlayer player, ItemStack armor) 
	{
	if (player.getCurrentArmor(3) != null && player.getCurrentArmor(3).getItem().equals(ModItems.glowstone_helmet) 
		&&player.getCurrentArmor(2) != null && player.getCurrentArmor(2).getItem().equals(ModItems.glowstone_chestplate) 
		&&player.getCurrentArmor(1) != null && player.getCurrentArmor(1).getItem().equals(ModItems.glowstone_leggings)
		&&player.getCurrentArmor(0) != null && player.getCurrentArmor(0).getItem().equals(ModItems.glowstone_boots))
		{
	 player.addPotionEffect(new PotionEffect(Potion.nightVision.id, 220, 0));
		}
	}
	
	@Override 
	public String getArmorTexture(ItemStack armor, Entity entity, int slot, String type)
	{
	 if(armor.getItem() == ModItems.glowstone_leggings)
	 	{
	 return "armourexpansion:textures/models/armor/glowstone_layer_2.png";
	 	} 
	 else
	 	{
	 return "armourexpansion:textures/models/armor/glowstone_layer_1.png";
	 	}
	}
	@Override
	public boolean getIsRepairable(ItemStack armor, ItemStack stack) 
	{
	 return stack.getItem() == ModItems.glowstone_ingot;
	}
}
