package com.cookiehook.armourexpansion.item;

import com.cookiehook.armourexpansion.init.ModItems;

import net.minecraft.entity.Entity;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemArmor;
import net.minecraft.item.ItemStack;
import net.minecraft.potion.Potion;
import net.minecraft.potion.PotionEffect;
import net.minecraft.world.World;

public class ItemRedstoneArmor extends BaseArmor {
	public ItemRedstoneArmor(ArmorMaterial material, int renderIndex, int armorType, String name) {
		super(material, renderIndex, armorType, name);
	}

	@Override
	public void onArmorTick(World world, EntityPlayer player, ItemStack armor) {
		if (player.getCurrentArmor(3).getItem() instanceof ItemRedstoneArmor 
				&& player.getCurrentArmor(2).getItem() instanceof ItemRedstoneArmor
				&& player.getCurrentArmor(1).getItem() instanceof ItemRedstoneArmor
				&& player.getCurrentArmor(0).getItem() instanceof ItemRedstoneArmor) {
			player.addPotionEffect(new PotionEffect(Potion.fireResistance.id, 20, 0));
		}
	}

	@Override
	public String getArmorTexture(ItemStack armor, Entity entity, int slot, String type) {
		if (armor.getItem() == ModItems.redstone_leggings) {
			return "armourexpansion:textures/models/armor/redstone_layer_2.png";
		} else {
			return "armourexpansion:textures/models/armor/redstone_layer_1.png";
		}
	}

	@Override
	public boolean getIsRepairable(ItemStack armor, ItemStack stack) {
		return stack.getItem() == ModItems.redstone_ingot;
	}
}
